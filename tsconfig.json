{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "useDefineForClassFields": false,
    "inlineSourceMap": true,
    "lib": [
      "ES2022",
      "dom"
    ],
  },
  "files": [
    "src/contract/Contract.ts",
    "src/runner/runAllContracts.ts",
    "src/util/messageFormat.ts",
    "src/util/makeGetters.ts",
    "src/util/getParametersFromGetters.ts",
    "src/types/ReturnValueCheckType.ts",
    "src/types/SideEffectCheckCaseType.ts",
    "src/types/SideEffectChecker.ts",
    "src/types/RunDescriptorEntity.ts",
    "src/types/ParameterGettersType.ts",
    "src/types/ReturnValueCheckCaseType.ts",
    "src/types/CaseDescriptorEntity.ts",
    "src/types/MethodType.ts",
    "src/types/EnvironmentManipulatorType.ts",
    "./src/types/ParameterConstraintType.ts",
    "./src/types/ParameterConstraintCaseType.ts",
  ],
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    ".stryker-tmp",
    "dist",
    "node_modules"
  ],
}